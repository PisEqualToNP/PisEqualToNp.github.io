<% include partials/header.ejs %>

<div class="container">
    <table class="table" style="width:100%">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col" style="text-align: left">Lent</th>
                <th scope="col" style="text-align: center">Due Date</th>
                <th scope="col" style="text-align: center">Rating</th>
                <th scope="col" style="text-align: center">Description</th>
                <th scope="col" style="text-align: right">Delete</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user, index) => { %>
                <% if (player.debt > 0) { %>
                    <tr>
                <th scope="row">user.name</th>
                <td style="text-align: left">user.debt</td>
                <td style="text-align: center">user.duedate</td>
                <td style="text-align: center">user.rating</td>
                <td style="text-align: center">user.description</td>
                <td><a href="/delete/<$ user.name $>" class="btn btn-sm btn-danger">Delete</a>
                </td>
                    </tr>
                <% } %>
            <% }) %>
        </tbody>
    </table>
    <table class="table" style="float:left">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col" style="text-align: center">Debt</th>
                <th scope="col" style="text-align: center">Due Date</th>
                <th scope="col" style="text-align: center">Rating</th>
                <th scope="col" style="text-align: center">Description</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user, index) => { %>
            <% if (player.debt < 0) { %>
                <tr>
                <th scope="row">user.name</th>
                <td style="text-align: left">user.debt</td>
                <td style="text-align: center">user.duedate</td>
                <td style="text-align: center">user.rating</td>
                <td style="text-align: center">user.description</td>
                </tr>
               <% } %>
            <% }) %>
        </tbody>
    </table>
</div>
