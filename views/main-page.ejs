<% include partials/header.ejs %>

<div class="container">
    <table class="table" style="width:100%">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col" style="text-align: left">Lent</th>
                <th scope="col" style="text-align: center">Due Date</th>
                <th scope="col" style="text-align: center">Rating</th>
                <th scope="col" style="text-align: center">Description</th>
                <th scope="col" style="text-align: right">Edit</th>
            </tr>
        </thead>
        <tbody>
            <% posts.forEach((post, index) => { %>
            <tr>
                <th scope="row">post.name</th>
                <td style="text-align: left">post.debt</td>
                <td style="text-align: center">post.duedate</td>
                <td style="text-align: center">post.rating</td>
                <td style="text-align: center">post.description</td>
                <td><a href="/" class="btn btn-sm btn-primary">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <table class="table" style="float:left">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col" style="text-align: center">Debt</th>
                <th scope="col" style="text-align: center">Due Date</th>
                <th scope="col" style="text-align: center">Rating</th>
                <th scope="col" style="text-align: center">Description</th>
            </tr>
        </thead>
        <tbody>
            <% posts.forEach((post, index) => { %>
            <tr>
                <th scope="row">post.name</th>
                <td style="text-align: left">post.debt</td>
                <td style="text-align: center">post.duedate</td>
                <td style="text-align: center">post.rating</td>
                <td style="text-align: center">post.description</td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>